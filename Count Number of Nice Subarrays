import java.util.*;

class Solution {
    public int numberOfSubarrays(int[] nums, int k) {
        int count = 0;
        int prefix = 0; 
        Map<Integer, Integer> freq = new HashMap<>();
        freq.put(0, 1); // base case

        for (int num : nums) {
            if (num % 2 == 1) prefix++;

            count += freq.getOrDefault(prefix - k, 0);

            freq.put(prefix, freq.getOrDefault(prefix, 0) + 1);
        }

        return count;
    }
}
