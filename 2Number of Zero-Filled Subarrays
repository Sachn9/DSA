class Solution {
    public long zeroFilledSubarray(int[] nums) {
        long count=0;
        long continuee=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]==0){
                continuee++;
                count+=continuee;
            }else{
                continuee=0;
            }
        }
        return count;
    }
}
