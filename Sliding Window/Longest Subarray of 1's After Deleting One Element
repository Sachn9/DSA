class Solution {
    public int longestSubarray(int[] nums) {
        int max=0;

        int left=0;

        int countOf0=0;
        for(int i=0;i<nums.length;i++){

            if(nums[i]==0){
                countOf0++;
            }
            while(countOf0>1){
                if(nums[left]==0){
                    countOf0--;
                }
                left++;
            }
            max=Math.max(max,i-left);
        }

        return max;
    }
}
