class Solution {
    static int threeSumSmaller(int n, int[] arr, int target) {
        // write code here

        int count=0;
        for(int i=0;i<arr.length;i++){
            int left=i+1;
            int right=n-1;

            while(left<right){

                if(arr[i]+arr[left]+arr[right]>=target){
                    right--;
                }else{
                    count++;
                    left++;
                }
            }
        }

        return count;
    }
}
