class Solution {
    public int triangleNumber(int[] arr) {
        int mod=1000000007;
        Arrays.sort(arr);
		long count=0;
		int n=arr.length;

		for(int k=n-1;k>=2;k--){
			int left=0;
			int right=k-1;

			while(left<right){
				if(arr[left]+arr[right]>arr[k]){
					count =(count+(right-left))%mod;
					right--;
				}else{
					left++;
				}
			}
		}

		return (int)count;
    }
}
