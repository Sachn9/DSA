class Solution {
    public boolean isValid(String s) {
        Stack<Character> st=new Stack<>();

        for (int i = 0; i < s.length(); i++) {
            st.push(s.charAt(i));

            if (st.size() >= 3) {
                char c1 = st.pop();
                char c2 = st.pop();
                char c3 = st.pop();

                if (c3 != 'a' || c2 != 'b' || c1 != 'c') {
                    st.push(c3);
                    st.push(c2);
                    st.push(c1);
                }
            }
        }
        return st.size() == 0;
    }
}
